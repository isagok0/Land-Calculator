<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <solid android:color="@color/colorAccent" /> <!-- Düğme arkaplan rengi -->
    <corners android:radius="12dp" /> <!-- Düğme köşeleri -->
    <padding android:left="8dp" android:top="8dp" android:right="8dp" android:bottom="8dp" /> <!-- Düğme iç içe boşluğu -->
    <size android:width="200dp" android:height="60dp" /> <!-- Düğme boyutları -->
    <stroke android:color="#FFFFFF" android:width="3dp" /> <!-- Düğme kenarlık rengi ve genişliği -->
    <item>
        <layer-list>
            <item>
                <shape>
                    <gradient android:startColor="@color/white" android:endColor="#00000000" android:angle="90" /> <!-- Gölge gradyan rengi ve açısı -->
                </shape>
            </item>
        </layer-list>
    </item>
</shape>
